                    nonSharedOrders.forEach(function(order) {
                      if (''+order.supplier.id == supplierId) {
                        $scope.currentSalesOrder = order;
                      }
                    });
                  }
                  if ( !$scope.currentSalesOrder) {
                    $scope.currentSalesOrder = (nonSharedOrders.length > 0) ? nonSharedOrders[0] : null;
