       };

       $scope.selected = [];

       teaService.getCategoryList()
        .then(function(data){
            $scope.categories = data.categories;
            $scope.selected = [];
            $scope.toggle = function (item, list) {
              var idx = list.indexOf(item);
              if (idx > -1) {
                list.splice(idx, 1);
              }
              else {
                list.push(item);
              }
            };

            $scope.exists = function (item, list) {
              return list.indexOf(item) > -1;
            };

            $scope.isIndeterminate = function() {
              return ($scope.selected.length !== 0 &&
                  $scope.selected.length !== $scope.categories.length);
            };

            $scope.isChecked = function() {
              return $scope.selected.length === $scope.categories.length;
            };

            $scope.toggleAll = function() {
              if ($scope.selected.length === $scope.categories.length) {
                $scope.selected = [];
              } else if ($scope.selected.length === 0 || $scope.selected.length > 0) {
                $scope.selected = $scope.categories.slice(0);
              }
            };
        });
